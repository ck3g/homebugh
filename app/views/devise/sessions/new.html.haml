.col-md-5.col-md-offset-3
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %h2= title t(:sign_in)
    .form-group
      .col-lg-12
        = f.input_field :email, autofocus: true, placeholder: t(:email)
    .form-group
      .col-lg-12
        = f.input_field :password, placeholder: t(:password)
    - if devise_mapping.rememberable?
      .form-group.remember-me
        .col-lg-12
          = f.input :remember_me, as: :boolean, label: false, inline_label: true
    = f.button :submit, t(:do_sign_in), class: "pull-left btn btn-primary btn-block"
  .clearfix
  = render "devise/shared/links"
