.col-md-5.offset-md-3
  = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f|
    %h2= t(:resend_confirmation_instructions)
    .mb-3{class: ('is-invalid' if resource.errors[:email].present?)}
      = f.input_field :email, autofocus: true, placeholder: t(:email), class: "form-control #{'is-invalid' if resource.errors[:email].present?}"
      - if resource.errors[:email].present?
        .invalid-feedback
          = f.error :email
    = f.button :submit, t(:resend_confirmation_instructions), class: "btn btn-primary w-100"
  .clearfix
  = render "devise/shared/links"
