.hero-section
  .hero-content
    .container
      = render 'shared/flash_messages'
      .row.justify-content-center
        .col-lg-8.text-center
          %h1.hero-title HomeBugh
          %p.hero-subtitle= t("welcome_page.slogan")
          .hero-buttons
            = link_to new_user_registration_path, class: "btn btn-success btn-lg hero-btn" do
              = fa_icon "user-plus", class: "me-2"
              = t("welcome_page.create_account_button")
            %span.hero-divider= t("welcome_page.or")
            = link_to new_user_session_path, class: "btn btn-success btn-lg hero-btn" do
              = fa_icon "sign-in", class: "me-2"
              = t("welcome_page.sign_in_button")

/ Features Section
.features-section
  .container
    .section-header.text-center.mb-5
      %h2.section-title= t('welcome_page.features.section_title')
      %p.section-subtitle= t('welcome_page.features.section_subtitle')
    
    .row.g-4
      / Transactions
      .col-lg-4.col-md-6
        .feature-card.h-100
          .feature-icon.text-center
            = fa_icon "exchange", class: "fa-3x"
          .feature-content
            %h3= t('welcome_page.features.transactions.title')
            %p= t('welcome_page.features.transactions.description')
            .feature-highlights
              .highlight-item
                = fa_icon "plus-circle", class: "me-2"
                %span= t('welcome_page.features.transactions.highlights.recording')
              .highlight-item
                = fa_icon "history", class: "me-2"
                %span= t('welcome_page.features.transactions.highlights.history')
              .highlight-item
                = fa_icon "bar-chart", class: "me-2"
                %span= t('welcome_page.features.transactions.highlights.analytics')
      
      / Accounts
      .col-lg-4.col-md-6
        .feature-card.h-100
          .feature-icon.text-center
            = fa_icon "credit-card", class: "fa-3x"
          .feature-content
            %h3= t('welcome_page.features.accounts.title')
            %p= t('welcome_page.features.accounts.description')
            .feature-highlights
              .highlight-item
                = fa_icon "university", class: "me-2"
                %span= t('welcome_page.features.accounts.highlights.multiple')
              .highlight-item
                = fa_icon "exchange", class: "me-2"
                %span= t('welcome_page.features.accounts.highlights.transfers')
              .highlight-item
                = fa_icon "line-chart", class: "me-2"
                %span= t('welcome_page.features.accounts.highlights.insights')
      
      / Categories
      .col-lg-4.col-md-6
        .feature-card.h-100
          .feature-icon.text-center
            = fa_icon "tags", class: "fa-3x"
          .feature-content
            %h3= t('welcome_page.features.categories.title')
            %p= t('welcome_page.features.categories.description')
            .feature-highlights
              .highlight-item
                = fa_icon "arrow-up", class: "me-2 income-icon"
                %span= t('welcome_page.features.categories.highlights.income')
              .highlight-item
                = fa_icon "arrow-down", class: "me-2 spending-icon"
                %span= t('welcome_page.features.categories.highlights.expense')
              .highlight-item
                = fa_icon "pie-chart", class: "me-2"
                %span= t('welcome_page.features.categories.highlights.organization')
      
      / Budgets
      .col-lg-4.col-md-6
        .feature-card.h-100
          .feature-icon.text-center
            = fa_icon "bar-chart", class: "fa-3x"
          .feature-content
            %h3= t('welcome_page.features.budgets.title')
            %p= t('welcome_page.features.budgets.description')
            .feature-highlights
              .highlight-item
                = fa_icon "target", class: "me-2"
                %span= t('welcome_page.features.budgets.highlights.limits')
              .highlight-item
                = fa_icon "eye", class: "me-2"
                %span= t('welcome_page.features.budgets.highlights.tracking')
              .highlight-item
                = fa_icon "warning", class: "me-2"
                %span= t('welcome_page.features.budgets.highlights.alerts')
      
      / Statistics
      .col-lg-4.col-md-6
        .feature-card.h-100
          .feature-icon.text-center
            = fa_icon "line-chart", class: "fa-3x"
          .feature-content
            %h3= t('welcome_page.features.statistics.title')
            %p= t('welcome_page.features.statistics.description')
            .feature-highlights
              .highlight-item
                = fa_icon "calendar", class: "me-2"
                %span= t('welcome_page.features.statistics.highlights.monthly')
              .highlight-item
                = fa_icon "pie-chart", class: "me-2"
                %span= t('welcome_page.features.statistics.highlights.breakdown')
              .highlight-item
                = fa_icon "line-chart", class: "me-2"
                %span= t('welcome_page.features.statistics.highlights.trends')
      
      / Recurring Payments
      .col-lg-4.col-md-6
        .feature-card.h-100
          .feature-icon.text-center
            = fa_icon "repeat", class: "fa-3x"
          .feature-content
            %h3= t('welcome_page.features.recurring.title')
            %p= t('welcome_page.features.recurring.description')
            .feature-highlights
              .highlight-item
                = fa_icon "calendar", class: "me-2"
                %span= t('welcome_page.features.recurring.highlights.scheduled')
              .highlight-item
                = fa_icon "bell", class: "me-2"
                %span= t('welcome_page.features.recurring.highlights.reminders')
              .highlight-item
                = fa_icon "cog", class: "me-2"
                %span= t('welcome_page.features.recurring.highlights.management')


