    .row
      .col-lg-12.text-center
        %ul.list-inline.justify-content-center
          %li.list-inline-item.footer-menu-divider ⋅
          %li.list-inline-item= link_to t("parts.auth.sign_up"), new_user_registration_path
          %li.list-inline-item.footer-menu-divider ⋅
          %li.list-inline-item= link_to t("parts.auth.sign_in"), new_user_session_path
