%tr
  %td= account.decorate.name
  %td.span2.number= account.decorate.amount
  %td.span2.actions
    = link_to edit_account_path(account), title: t('common.edit'), class: "btn btn-outline-secondary btn-sm", data: { bs_toggle: 'tooltip' } do
      = fa_icon "pencil"
    - if account.funds.to_f.zero?
      = link_to account, data: { confirm: t('common.are_you_sure'), bs_toggle: 'tooltip' }, method: :delete, title: t('common.archive'), class: "btn btn-danger btn-sm" do
        = fa_icon "trash"
    - else
      = link_to new_cash_flow_path,
        title: "#{t('parts.accounts.account_not_empty')} #{t('parts.cash_flows.new_cash_flows')}",
        class: "btn btn-outline-secondary btn-sm",
        data: { bs_toggle: 'tooltip' } do
        = fa_icon "retweet"
