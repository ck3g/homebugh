= simple_form_for account do |f|
  = f.input :name, wrapper: :horizontal_form
  = f.association :currency, include_blank: false, wrapper: :horizontal_form
  .row.mb-3
    .col-12.col-xl-4.offset-xl-2
      .form-check
        = f.input :show_in_summary, label: false, inline_label: true, input_html: { class: "form-check-input" }
  .row.mb-3
    .col-12.col-xl-4.offset-xl-2
      = f.button :submit, class: "btn btn-primary", id: :account_submit
      = link_to t("common.back"), accounts_path, class: "btn btn-secondary ms-2"
