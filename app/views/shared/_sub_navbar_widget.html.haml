.row
  .col-xs-12
    %h2
      = title title_content
      .pull-right.hidden-xs
        - if defined?(additional_links)
          - additional_links.each do |link|
            = link_to link[:title], link[:url], class: 'btn btn-default'
        - if defined?(add_link_title) && defined?(add_link_url)
          = link_to add_link_title, add_link_url, class: 'btn btn-success'
  .col-xs-12.col-sm-6.hidden-sm.hidden-md.hidden-lg
    - if defined?(additional_links)
      - additional_links.each do |link|
        = link_to link[:title], link[:url], class: 'btn btn-default btn-block'
    - if defined?(add_link_title) && defined?(add_link_url)
      = link_to add_link_title, add_link_url, class: 'btn btn-success btn-block'

.clearfix.spacer
