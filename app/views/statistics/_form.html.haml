= form_for(@statistic) do |f|
  - if @statistic.errors.any?
    #error_explanation
      %h2
        = pluralize(@statistic.errors.count, "error")
        prohibited this statistic from being saved:
      %ul
        - @statistic.errors.full_messages.each do |msg|
          %li= msg
  .actions
    = f.submit
