= simple_form_for recurring_cash_flow, html: { class: "form-horizontal", role: 'form' } do |f|
  = f.association :from_account,
    collection: AccountDecorator.decorate_collection(current_user.accounts.active.by_recently_used),
    include_blank: false, input_html: { data: { select_2: true } }
  = f.association :to_account,
    collection: AccountDecorator.decorate_collection(current_user.accounts.active.by_recently_used),
    include_blank: false, input_html: { data: { select_2: true } }
  = f.input :amount, input_html: { class: 'medium-input' }
  = f.input :frequency, collection: recurring_payment_frequencies_collection, as: :select, input_html: { class: 'medium-input' }
  = f.input :frequency_amount, input_html: { class: 'medium-input' }
  = f.input :next_transfer_on, as: :date, start_year: Date.today.year, order: [:day, :month, :year], input_html: { class: 'date-select' }
  = f.input :ends_on, as: :date, start_year: Date.today.year, order: [:day, :month, :year], input_html: { class: 'date-select' }, include_blank: true
  .clearfix
  .form-group.action-buttons
    .col-lg-offset-2.col-lg-10
      = f.button :submit, class: "btn btn-primary", id: :recurring_cash_flow_submit
      = link_to t("common.back"), recurring_cash_flows_path, class: "btn"
